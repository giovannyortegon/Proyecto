@page "{id:int}"
@model AuditSentinel.Pages.Escaneos.DeleteModel

@{
    ViewData["Title"] = "Eliminar Escaneo";
}




<div class="p-5">
<!-- Contenedor pantalla completa: centra vertical y horizontalmente -->
<div class="container  d-flex align-items-center justify-content-center">
    <!-- Rectángulo centrado -->
    <div class="card shadow-lg" style="max-width: 640px; width: 80%;">
        <div class="card-body">

            <!-- Título centrado -->
            <h2 class="text-center mb-3">Eliminar Escaneo</h2>

            <!-- Alerta centrada -->
            <div class="alert alert-danger text-center mb-4" role="alert">
                ¿Está seguro que desea eliminar este escaneo?
            </div>

            <!-- Detalles centrados -->
            <dl class="row justify-content-center mb-4">
                <dt class="col-sm-4 text-end">Nombre</dt>
                <dd class="col-sm-6 text-start">@Model.Escaneo.NombreEscaneo</dd>

                <dt class="col-sm-4 text-end">Estado</dt>
                <dd class="col-sm-6 text-start">@Model.Escaneo.Estado</dd>
            </dl>

            <!-- Botones centrados -->
            <form method="post" class="d-flex justify-content-center gap-3">
                <input type="hidden" asp-for="Escaneo.IdEscaneo" />
                <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                <a asp-page="Index" class="btn btn-secondary px-4">Cancelar</a>
            </form>

        </div>
    </div>

</div>
</div>