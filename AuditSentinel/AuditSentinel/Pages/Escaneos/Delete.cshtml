@page "{id:int}"
@model AuditSentinel.Pages.Escaneos.DeleteModel

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 500px; width: 100%;">

        <div class="bg-danger p-4 text-center text-white bg-gradient">
            <div class="mb-2">
                <i class="bi bi-exclamation-octagon shadow-sm" style="font-size: 3.5rem;"></i>
            </div>
            <h2 class="h4 fw-bold mb-0">¿Eliminar Registro?</h2>
            <p class="small opacity-75 mb-0 text-uppercase tracking-wider">Esta acción no se puede deshacer</p>
        </div>

        <div class="card-body p-4">
            <p class="text-center text-muted mb-4">
                Estás a punto de borrar permanentemente el siguiente escaneo del sistema:
            </p>

            <div class="bg-light rounded-3 p-3 mb-4 border">
                <div class="row mb-2">
                    <div class="col-4 text-muted small fw-bold text-uppercase">Nombre:</div>
                    <div class="col-8 fw-bold text-dark">@Model.Escaneo.NombreEscaneo</div>
                </div>
                <div class="row">
                    <div class="col-4 text-muted small fw-bold text-uppercase">Estado:</div>
                    <div class="col-8">
                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                            @Model.Escaneo.Estado
                        </span>
                    </div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Escaneo.IdEscaneo" />

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm fw-bold">
                        <i class="bi bi-trash3 me-2"></i>Confirmar Eliminación
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary py-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar y Volver
                    </a>
                </div>
            </form>
        </div>

        <div class="card-footer bg-white border-top-0 py-3 text-center">
            <small class="text-muted italic">
                <i class="bi bi-shield-lock me-1"></i> AuditSentinel Data Protection
            </small>
        </div>
    </div>
</div>

<style>
    /* Efecto de fondo sutil para la página */
    body {
        background-color: #f8f9fc;
        background-image: radial-gradient(circle at center, rgba(220, 53, 69, 0.03) 0%, transparent 70%);
    }

    /* Animación sutil al cargar */
    .card {
        animation: fadeIn 0.3s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-danger {
        transition: all 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            transform: scale(1.02);
        }
</style>