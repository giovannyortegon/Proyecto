@page "{id:int}"
@using AuditSentinel.Models
@model AuditSentinel.Pages.Escaneos.EditModel
<div class="p-5">
<h2>Editar Escaneo</h2>

<form method="post">
    <input type="hidden" asp-for="Escaneo.IdEscaneo" />
    <div class="card p-3">
    <div class="mb-3">
        <label asp-for="Escaneo.NombreEscaneo"></label>
        <input asp-for="Escaneo.NombreEscaneo" class="form-control" />
    </div>

        <div class="mb-3">
        <label asp-for="Escaneo.Estado"></label>
        <select asp-for="Escaneo.Estado"
                asp-items="Html.GetEnumSelectList<EstadoEscaneo>()"
                class="form-control">
        </select>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6 mb-3">
        <label>Servidores</label>
        <select asp-for="ServidoresSeleccionados"
                asp-items="Model.Servidores"
                multiple
                class="form-control">
        </select>
    </div>

        <div class="col-md-6 mb-3">
        <label>Plantillas</label>
        <select asp-for="PlantillasSeleccionadas"
                asp-items="Model.Plantillas"
                multiple
                class="form-control">
        </select>
    </div>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
