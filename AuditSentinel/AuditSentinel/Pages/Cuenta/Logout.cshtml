@page
@model AuditSentinel.Pages.Cuenta.LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

@* <h2>@ViewData["Title"]</h2> *@

<div class="container d-flex justify-content-center align-items-center p-5 ">
    <div class="card bg-white p-4 text-white" style="width: 100%; max-width: 300px; height: 250px;">
        <h2 class="text-center mb-4 text-dark">@ViewData["Title"]</h2>
        <p class="text-center text-dark">¿Deseas cerrar sesión?</p>

        <form method="post" class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn btn-danger">Cerrar sesión</button>
            <a class="btn btn-secondary " asp-page="/Index">Cancelar</a>
        </form>
    </div>
</div>

