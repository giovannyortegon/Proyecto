@page
@model AuditSentinel.Pages.Cuenta.LoginModel
@using AuditSentinel.Models

@{
    ViewData["Title"] = "Acceso al Sistema";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">
            <div class="col-md-5 d-none d-md-flex bg-primary flex-column align-items-center justify-content-center text-white p-5 bg-gradient">
                <div class="mb-4">
                    <i class="bi bi-shield-lock" style="font-size: 5rem;"></i>
                </div>
                <h2 class="fw-bold">AuditSentinel</h2>
                <p class="text-center opacity-75">Plataforma de Auditoría y Control de Vulnerabilidades</p>
                <div class="mt-4 small opacity-50">v3.0.1 — Acceso Restringido</div>
            </div>

            <div class="col-md-7 bg-white p-5">
                <div class="text-center mb-4 d-md-none">
                    <i class="bi bi-shield-lock text-primary fs-1"></i>
                    <h3 class="fw-bold">AuditSentinel</h3>
                </div>

                <h4 class="fw-bold text-dark mb-1">Bienvenido</h4>
                <p class="text-muted mb-4">Ingrese sus credenciales para continuar</p>

                <form method="post">
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Login.Email" class="form-control bg-light border-start-0 ps-0" placeholder="usuario@empresa.com" />
                        </div>
                        <span asp-validation-for="Login.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="Login.Password" class="form-control bg-light border-start-0 ps-0" type="password" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Login.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm py-2">
                            Iniciar Sesión <i class="bi bi-arrow-right-short"></i>
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger py-2 small border-0 text-center mb-0" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @Model.ErrorMessage
                        </div>
                    }
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">© @DateTime.Now.Year AuditSentinel Security</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f4f7f6;
        background-image: radial-gradient(#d1d9e6 1px, transparent 1px);
        background-size: 20px 20px;
    }

    .card {
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background-color: #fff !important;
        border-color: #0d6efd;
        box-shadow: none;
    }

    .input-group-text {
        border-color: #dee2e6;
    }

    /* Degradado personalizado para el lado izquierdo */
    .bg-primary.bg-gradient {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}