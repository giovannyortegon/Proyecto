@page "{id:int}"
@model AuditSentinel.Pages.Vulnerabilidades.EditModel
@{
    ViewData["Title"] = "Editar Vulnerabilidad";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-page="Index">Vulnerabilidades</a></li>
                    <li class="breadcrumb-item active">Editar Registro</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800 fw-bold">
                <i class="bi bi-pencil-square text-warning"></i> Editar Vulnerabilidad <span class="text-muted small">#@Model.Vulnerabilidad.IdVulnerabilidad</span>
            </h1>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Vulnerabilidad.IdVulnerabilidad" />

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 border-bottom border-warning border-3">
                        <h6 class="m-0 font-weight-bold text-dark">Información General</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Vulnerabilidad.NombreVulnerabilidad" class="form-label small fw-bold text-muted text-uppercase"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-shield-shaded text-warning"></i></span>
                                <input asp-for="Vulnerabilidad.NombreVulnerabilidad" class="form-control bg-light border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Vulnerabilidad.NombreVulnerabilidad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Vulnerabilidad.NivelRiesgo" class="form-label small fw-bold text-muted text-uppercase">Nivel de Riesgo Actual</label>
                            <select asp-for="Vulnerabilidad.NivelRiesgo" class="form-select border-start border-4 border-warning"
                                    asp-items="Html.GetEnumSelectList<AuditSentinel.Models.NivelRiesgo>()">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Vulnerabilidad.Descripcion" class="form-label small fw-bold text-muted text-uppercase"></label>
                            <textarea asp-for="Vulnerabilidad.Descripcion" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Vulnerabilidad.Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Vulnerabilidad.FechaDetectada" class="form-label small fw-bold text-muted text-uppercase">Fecha de Registro</label>
                            <input asp-for="Vulnerabilidad.FechaDetectada" type="datetime-local" class="form-control"
                                   value="@Model.Vulnerabilidad.FechaDetectada.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="Vulnerabilidad.FechaDetectada" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100 bg-light">
                    <div class="card-header bg-dark text-white py-3">
                        <h6 class="m-0 font-weight-bold"><i class="bi bi-code-slash me-2"></i>Editor Técnico</h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning border-0 small shadow-sm mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Nota:</strong> Los cambios en el comando afectarán inmediatamente a todas las plantillas vinculadas.
                        </div>

                        <div class="mb-4">
                            <label asp-for="Vulnerabilidad.Comando" class="form-label small fw-bold text-dark text-uppercase">Script / Instrucción de Auditoría</label>
                            <textarea asp-for="Vulnerabilidad.Comando" class="form-control font-monospace bg-dark text-warning border-0"
                                      rows="5" style="resize: none;"></textarea>
                            <span asp-validation-for="Vulnerabilidad.Comando" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Vulnerabilidad.ResultadoEsperado" class="form-label small fw-bold text-dark text-uppercase">Patrón de Respuesta (Output)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-terminal-check text-success"></i></span>
                                <input asp-for="Vulnerabilidad.ResultadoEsperado" class="form-control font-monospace border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Vulnerabilidad.ResultadoEsperado" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mt-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <span class="text-muted small italic"><i class="bi bi-shield-check me-1"></i> Asegúrese de probar el comando antes de actualizar.</span>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning btn-lg px-5 shadow-sm fw-bold">
                        <i class="bi bi-arrow-repeat me-2"></i> Actualizar Vulnerabilidad
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .font-monospace {
        font-family: 'Courier New', Courier, monospace !important;
        font-size: 0.9rem;
    }

    .form-control:focus {
        border-color: #f6c23e;
        box-shadow: 0 0 0 0.25rem rgba(246, 194, 62, 0.15);
    }

    /* Estilo para simular editor de código */
    textarea.font-monospace {
        padding: 1rem;
        line-height: 1.5;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}