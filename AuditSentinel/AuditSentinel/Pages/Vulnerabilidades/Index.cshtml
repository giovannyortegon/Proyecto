@page
@model AuditSentinel.Pages.Vulnerabilidades.IndexModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Analista")]

@{
    ViewData["Title"] = "Vulnerabilidades";
}
<h2>Vulnerabilidades</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input name="search" value="@Model.Search" class="form-control" placeholder="Buscar por nombre o descripción..." />
    </div>
    <div class="col-md-3">
        <select name="riesgo" class="form-select"
                asp-items="Html.GetEnumSelectList<AuditSentinel.Models.NivelRiesgo>()">
            <option value="">-- Riesgo (todos) --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100" type="submit">Filtrar</button>
    </div>
    <div class="col-md-3 text-end">
        <a class="btn btn-primary" asp-page="Create">Nueva Vulnerabilidad</a>
    </div>
</form>

<table class="table table-striped p-5">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Riesgo</th>
            <th>Fecha Detectada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Items)
        {
            <tr>
                <td>@v.NombreVulnerabilidad</td>
                <td>@v.NivelRiesgo</td>
                <td>@v.FechaDetectada.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <a asp-page="Details" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-page="Edit" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Controles de paginación -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación de servidores" class="mt-3">
        <ul class="pagination justify-content-center">
            <!-- Primero -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="1"
                   asp-route-search="@Model.Search">« Primero</a>
            </li>

            <!-- Anterior -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-search="@Model.Search">‹ Anterior</a>
            </li>

            <!-- Páginas numeradas (pequeño rango centrado) -->
            @{
                var start = Math.Max(1, Model.PageNumber - 2);
                var end = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                for (int i = start; i <= end; i++)
                {
                    var active = i == Model.PageNumber ? "active" : "";
                    <li class="page-item @active">
                        <a class="page-link"
                           asp-page="./Index"
                           asp-route-pageNumber="@i"
                           asp-route-search="@Model.Search">@i</a>
                    </li>
                }
            }

            <!-- Siguiente -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-search="@Model.Search">Siguiente ›</a>
            </li>

            <!-- Último -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="@Model.TotalPages"
                   asp-route-search="@Model.Search">Último »</a>
            </li>
        </ul>
        <div class="text-center text-muted">
            Página @Model.PageNumber de @Model.TotalPages — @Model.TotalItems registro(s)
        </div>
    </nav>
}