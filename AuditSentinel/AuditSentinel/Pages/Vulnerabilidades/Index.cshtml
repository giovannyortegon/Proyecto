@page
@model AuditSentinel.Pages.Vulnerabilidades.IndexModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Analista")]

@{
    ViewData["Title"] = "Catálogo de Vulnerabilidades";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800 fw-bold">
                <i class="bi bi-bug-fill text-primary"></i> Catálogo de Vulnerabilidades
            </h1>
            <p class="text-muted small mb-0">Gestione las definiciones de amenazas y firmas de escaneo.</p>
        </div>
        <a class="btn btn-primary shadow-sm px-4 fw-bold" asp-page="Create">
            <i class="bi bi-plus-circle me-1"></i> Nueva Vulnerabilidad
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input name="search" value="@Model.Search" class="form-control bg-light border-start-0 ps-0" placeholder="Buscar por nombre o descripción..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="riesgo" class="form-select bg-light"
                            asp-items="Html.GetEnumSelectList<AuditSentinel.Models.NivelRiesgo>()">
                        <option value="">-- Todos los niveles de Riesgo --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-primary w-100 fw-bold" type="submit">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-page="./Index" class="btn btn-link text-decoration-none text-muted small w-100 mt-1">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="ps-4 py-3" style="width: 40%;">Nombre de la Amenaza</th>
                            <th class="text-center">Nivel de Riesgo</th>
                            <th class="text-center">Fecha de Registro</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var v in Model.Items)
                            {
                                var riesgo = v.NivelRiesgo.ToString();
                                var badgeClass = riesgo.ToLower() switch
                                {
                                    "crítico" or "alto" => "bg-danger",
                                    "medio" => "bg-warning text-dark",
                                    "bajo" => "bg-success",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@v.NombreVulnerabilidad</div>
                                        <div class="text-muted x-small">ID: #@v.IdVulnerabilidad</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @badgeClass rounded-pill px-3 py-2 text-uppercase fw-bold" style="min-width: 85px; font-size: 0.7rem;">
                                            @v.NivelRiesgo
                                        </span>
                                    </td>
                                    <td class="text-center text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i> @v.FechaDetectada.ToString("yyyy-MM-dd")
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm border rounded">
                                            <a asp-page="Details" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-white text-info" title="Detalles">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-white text-warning" title="Editar">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-white text-danger" title="Eliminar">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="bi bi-clipboard-x fs-1 text-muted d-block mb-2"></i>
                                    <span class="text-muted">No se encontraron vulnerabilidades que coincidan con la búsqueda.</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 py-3">
                <nav aria-label="Paginación">
                    <ul class="pagination pagination-sm justify-content-center mb-2">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="1" asp-route-search="@Model.Search"><i class="bi bi-chevron-double-left"></i></a>
                        </li>
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-search="@Model.Search"><i class="bi bi-chevron-left"></i></a>
                        </li>

                        @{
                            var start = Math.Max(1, Model.PageNumber - 2);
                            var end = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                            for (int i = start; i <= end; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link fw-bold" asp-page="./Index" asp-route-pageNumber="@i" asp-route-search="@Model.Search">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-search="@Model.Search"><i class="bi bi-chevron-right"></i></a>
                        </li>
                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@Model.TotalPages" asp-route-search="@Model.Search"><i class="bi bi-chevron-double-right"></i></a>
                        </li>
                    </ul>
                    <div class="text-center x-small text-muted">
                        Mostrando página <strong>@Model.PageNumber</strong> de <strong>@Model.TotalPages</strong> — Total de <strong>@Model.TotalItems</strong> registros
                    </div>
                </nav>
            </div>
        }
    </div>
</div>

<style>
    .x-small {
        font-size: 0.75rem;
    }

    .btn-white {
        background: white;
        border: none;
    }

        .btn-white:hover {
            background: #f8f9fa;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.02);
    }

    .page-link {
        color: #4e73df;
        border: none;
        margin: 0 2px;
        border-radius: 5px !important;
    }

    .page-item.active .page-link {
        background-color: #4e73df;
        border-color: #4e73df;
    }
</style>