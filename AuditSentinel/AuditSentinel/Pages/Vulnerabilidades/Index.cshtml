@page
@model AuditSentinel.Pages.Vulnerabilidades.IndexModel
@{
    ViewData["Title"] = "Vulnerabilidades";
}
<h2>Vulnerabilidades</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input name="search" value="@Model.Search" class="form-control" placeholder="Buscar por nombre o descripción..." />
    </div>
    <div class="col-md-3">
        <select name="riesgo" class="form-select"
                asp-items="Html.GetEnumSelectList<AuditSentinel.Models.NivelRiesgo>()">
            <option value="">-- Riesgo (todos) --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100" type="submit">Filtrar</button>
    </div>
    <div class="col-md-3 text-end">
        <a class="btn btn-primary" asp-page="Create">Nueva Vulnerabilidad</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Riesgo</th>
            <th>Fecha Detectada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Items)
        {
            <tr>
                <td>@v.NombreVulnerabilidad</td>
                <td>@v.NivelRiesgo</td>
                <td>@v.FechaDetectada.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <a asp-page="Details" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-page="Edit" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@v.IdVulnerabilidad" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>