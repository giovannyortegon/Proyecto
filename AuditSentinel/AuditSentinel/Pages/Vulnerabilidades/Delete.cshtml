@page "{id:int}"
@model AuditSentinel.Pages.Vulnerabilidades.DeleteModel
@{
    ViewData["Title"] = "Eliminar Vulnerabilidad";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 550px; width: 100%;">

        <div class="bg-danger p-4 text-center text-white bg-gradient">
            <div class="mb-3">
                <i class="bi bi-shield-slash-fill shadow-sm" style="font-size: 3.5rem;"></i>
            </div>
            <h2 class="h4 fw-bold mb-0">¿Eliminar del Catálogo?</h2>
            <p class="small opacity-75 mb-0 text-uppercase tracking-wider">Esta acción afectará a las plantillas vinculadas</p>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-danger border-0 small mb-4 d-flex align-items-center">
                <i class="bi bi-exclamation-octagon-fill fs-4 me-3"></i>
                <div>
                    <strong>Atención:</strong> Al eliminar esta definición, no podrá ser seleccionada en futuros escaneos y desaparecerá de los perfiles de seguridad activos.
                </div>
            </div>

            <div class="bg-light rounded-3 p-3 mb-4 border border-danger-subtle">
                <div class="row g-2 small">
                    <div class="col-4 text-muted fw-bold text-uppercase">Vulnerabilidad:</div>
                    <div class="col-8 fw-bold text-dark">@Model.Vulnerabilidad.NombreVulnerabilidad</div>

                    <div class="col-4 text-muted fw-bold text-uppercase">Nivel de Riesgo:</div>
                    <div class="col-8">
                        @{
                            var riesgo = Model.Vulnerabilidad.NivelRiesgo.ToString();
                            var badgeColor = riesgo.ToLower() == "alto" ? "bg-danger" : "bg-warning text-dark";
                        }
                        <span class="badge @badgeColor rounded-pill px-3">@riesgo</span>
                    </div>

                    <div class="col-4 text-muted fw-bold text-uppercase">Registrada:</div>
                    <div class="col-8 text-muted italic">@Model.Vulnerabilidad.FechaDetectada.ToString("f")</div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Vulnerabilidad.IdVulnerabilidad" />

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm fw-bold py-2">
                        <i class="bi bi-trash3 me-2"></i>Eliminar Definitivamente
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar y Volver
                    </a>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="mt-3 text-danger x-small text-center animate__animated animate__shakeX">
                        <i class="bi bi-info-circle me-1"></i> No se puede eliminar: compruebe si la vulnerabilidad está en uso.
                    </div>
                }
            </form>
        </div>

        <div class="card-footer bg-white border-top-0 py-3 text-center">
            <small class="text-muted italic" style="font-size: 0.75rem;">
                <i class="bi bi-shield-lock me-1"></i> AuditSentinel Database Integrity
            </small>
        </div>
    </div>
</div>

<style>
    /* Fondo con gradiente radial sutil */
    body {
        background-color: #f8f9fc;
        background-image: radial-gradient(circle at center, rgba(220, 53, 69, 0.05) 0%, transparent 70%);
    }

    /* Animación de entrada */
    .card {
        animation: zoomIn 0.3s ease-out;
    }

    @@keyframes zoomIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .x-small {
        font-size: 0.8rem;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
    }
</style>