
@page
@model AuditSentinel.Pages.Vulnerabilidades.CreateModel
@{
    ViewData["Title"] = "Nueva Vulnerabilidad";
}
<h2>Nueva Vulnerabilidad</h2>

<form method="post">
    <div class="card p-3">
        <div class="mb-3">
            <label asp-for="Vulnerabilidad.NombreVulnerabilidad" class="form-label"></label>
            <input asp-for="Vulnerabilidad.NombreVulnerabilidad" class="form-control" />
            <span asp-validation-for="Vulnerabilidad.NombreVulnerabilidad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vulnerabilidad.NivelRiesgo" class="form-label"></label>
            <select asp-for="Vulnerabilidad.NivelRiesgo" class="form-select"
                    asp-items="Html.GetEnumSelectList<AuditSentinel.Models.NivelRiesgo>()"></select>
            <span asp-validation-for="Vulnerabilidad.NivelRiesgo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vulnerabilidad.Descripcion" class="form-label"></label>
            <textarea asp-for="Vulnerabilidad.Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Vulnerabilidad.Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vulnerabilidad.Comando" class="form-label"></label>
            <textarea asp-for="Vulnerabilidad.Comando" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Vulnerabilidad.Comando" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vulnerabilidad.ResultadoEsperado" class="form-label"></label>
            <input asp-for="Vulnerabilidad.ResultadoEsperado" class="form-control" />
            <span asp-validation-for="Vulnerabilidad.ResultadoEsperado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vulnerabilidad.FechaDetectada" class="form-label"></label>
            <input asp-for="Vulnerabilidad.FechaDetectada" type="datetime-local" class="form-control"
                   value="@Model.Vulnerabilidad.FechaDetectada.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Vulnerabilidad.FechaDetectada" class="text-danger"></span>
        </div>

               <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}