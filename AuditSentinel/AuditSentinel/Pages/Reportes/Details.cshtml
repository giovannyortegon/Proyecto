
@page "{id:int}"
@model AuditSentinel.Pages.Reportes.DetailsModel
@{
    ViewData["Title"] = "Detalles del Reporte";
}
<h2>Detalles</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Reporte.NombreReporte</dd>
        <dt class="col-sm-3">Cumplimiento</dt><dd class="col-sm-9">@Model.Reporte.cumplimiento</dd>
        <dt class="col-sm-3">Creado</dt><dd class="col-sm-9">@Model.Reporte.Creado</dd>
    </dl>
    <hr />
    <h5>Escaneos asociados</h5>
    <ul>
        @foreach (var x in Model.Reporte.EscaneosReportes)
        {
            <li>@x.Escaneos?.NombreEscaneo (@x.Escaneos?.Estado)</li>
        }
    </ul>

    <div class="mt-3 d-flex gap-2">
        <a asp-page="Edit" asp-route-id="@Model.Reporte.IdReporte" class="btn btn-primary">Editar</a>
        <a asp-page="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>