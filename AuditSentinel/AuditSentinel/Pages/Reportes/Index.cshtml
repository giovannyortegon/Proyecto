@page
@model AuditSentinel.Pages.Reportes.IndexModel
@{
    ViewData["Title"] = "Reportes";
}
<h2>Reportes</h2>


<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input name="search" value="@Model.Search" class="form-control" placeholder="Buscar por nombre o descripción..." />
    </div>
    <div class="col-md-3">
        <select name="cumplimiento" class="form-select"
                asp-items="Html.GetEnumSelectList<AuditSentinel.Models.Cumplimiento>()">
            <option value="">-- Cumplimiento (todos) --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100" type="submit">Filtrar</button>
    </div>
    <div class="col-md-3 text-end">
        <a class="btn btn-primary" asp-page="Create">Nuevo Reporte</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cumplimiento</th>
            <th>Fecha</th>
            <th># Escaneos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Items)
        {
            <tr>
                <td>@r.NombreReporte</td>
                <td>@r.cumplimiento</td>
                <td>@r.Creado.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(r.EscaneosReportes?.Count ?? 0)</td>
                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@r.IdReporte" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-page="Details" asp-route-id="@r.IdReporte" class="btn btn-sm btn-secondary">Detalles</a>
                    <a asp-page="Delete" asp-route-id="@r.IdReporte" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>