@page
@model AuditSentinel.Pages.Reportes.IndexModel
@{
    ViewData["Title"] = "Reportes";
}
<h2>Reportes</h2>
<p><a class="btn btn-primary" asp-page="Create">Nuevo Reporte</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cumplimiento</th>
            <th>Fecha</th>
            <th># Escaneos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Items)
        {
            <tr>
                <td>@r.NombreReporte</td>
                <td>@r.cumplimiento</td>
                <td>@r.Creado.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(r.EscaneosReportes?.Count ?? 0)</td>
                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@r.IdReporte" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-page="Details" asp-route-id="@r.IdReporte" class="btn btn-sm btn-secondary">Detalles</a>
                    <a asp-page="Delete" asp-route-id="@r.IdReporte" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>