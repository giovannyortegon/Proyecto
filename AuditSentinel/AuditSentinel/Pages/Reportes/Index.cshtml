
@page
@using AuditSentinel.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model AuditSentinel.Pages.Reportes.IndexModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Analista")]


@{
    ViewData["Title"] = "Reportes";
}
<div class="p-5">
<h2>Reportes</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input name="search" value="@Model.Search" class="form-control" placeholder="Buscar por nombre o descripción..." />
    </div>

    <div class="col-md-3">
        <select name="cumplimiento" class="form-select"
                asp-items="Html.GetEnumSelectList<AuditSentinel.Models.Cumplimiento>()">
            <option value="">-- Cumplimiento (todos) --</option>
        </select>
    </div>

    <div class="col-md-2">
        <button class="btn btn-outline-primary w-100" type="submit">Filtrar</button>
    </div>

    <div class="col-md-3 text-end">
        <a class="btn btn-primary" asp-page="Create">Nuevo Reporte</a>
    </div>
</form>
</div>

<table class="table p-5">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cumplimiento</th>
            <th>Fecha</th>
            <th># Escaneos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.NombreReporte</td>
                    <td>@r.cumplimiento</td>
                    <td>@r.Creado.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(r.EscaneosReportes?.Count ?? 0)</td>
                    <td class="text-end">
                        <a asp-page="Edit" asp-route-id="@r.IdReporte" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-page="Details" asp-route-id="@r.IdReporte" class="btn btn-sm btn-secondary">Detalles</a>
                        <a asp-page="Delete" asp-route-id="@r.IdReporte" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay reportes para mostrar.</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación" class="mt-3">
        <ul class="pagination justify-content-center">
            <!-- Anterior -->
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-search="@Model.Search"
                   asp-route-cumplimiento="@(Model.Cumplimiento)">
                    Anterior
                </a>
            </li>

            <!-- Numeración -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-route-pageNumber="@i"
                       asp-route-search="@Model.Search"
                       asp-route-cumplimiento="@(Model.Cumplimiento)">
                        @i
                    </a>
                </li>
            }

            <!-- Siguiente -->
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-search="@Model.Search"
                   asp-route-cumplimiento="@(Model.Cumplimiento)">
                    Siguiente
                </a>
            </li>
        </ul>

        <div class="text-center text-muted">
            Página @Model.PageNumber de @Model.TotalPages — @Model.TotalItems registro(s)
        </div>
       </nav>
}
