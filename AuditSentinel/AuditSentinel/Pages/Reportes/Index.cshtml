@page
@using AuditSentinel.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model AuditSentinel.Pages.Reportes.IndexModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Analista")]

@{
    ViewData["Title"] = "Reportes de Auditoría";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-file-earmark-bar-graph"></i> Reportes de Auditoría
        </h1>
        <a class="btn btn-primary shadow-sm" asp-page="Create">
            <i class="bi bi-file-earmark-plus"></i> Nuevo Reporte
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Parámetros del Informe</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label small fw-bold">Buscar Reporte</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input name="search" value="@Model.Search" class="form-control" placeholder="Nombre o descripción..." />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small fw-bold">Nivel de Cumplimiento</label>
                    <select name="cumplimiento" class="form-select"
                            asp-items="Html.GetEnumSelectList<AuditSentinel.Models.Cumplimiento>()">
                        <option value="">Todos los niveles</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button class="btn btn-outline-primary flex-grow-1" type="submit">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-dark">Historial de Informes Generados</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nombre del Reporte</th>
                            <th>Cumplimiento</th>
                            <th>Fecha de Creación</th>
                            <th class="text-center">Escaneos Incluidos</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var r in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@r.NombreReporte</div>
                                        <div class="small text-muted text-truncate" style="max-width: 250px;">ID: #@r.IdReporte</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill px-3">
                                            @r.cumplimiento
                                        </span>
                                    </td>
                                    <td>
                                        <span class="small text-muted">
                                            <i class="bi bi-clock me-1"></i> @r.Creado.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-circle bg-light text-dark border p-2" style="width: 32px; height: 32px; display: inline-flex; align-items: center; justify-content: center;">
                                            @(r.EscaneosReportes?.Count ?? 0)
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a asp-page="Details" asp-route-id="@r.IdReporte" class="btn btn-sm btn-outline-secondary" title="Ver Detalles">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@r.IdReporte" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@r.IdReporte" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-file-earmark-x d-block fs-1 mb-2"></i>
                                    No se encontraron reportes registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 py-3">
                <nav aria-label="Paginación">
                    <ul class="pagination pagination-sm justify-content-center mb-2">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-search="@Model.Search" asp-route-cumplimiento="@Model.Cumplimiento">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" asp-route-search="@Model.Search" asp-route-cumplimiento="@Model.Cumplimiento">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-search="@Model.Search" asp-route-cumplimiento="@Model.Cumplimiento">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="text-center small text-muted">
                        Página @Model.PageNumber de @Model.TotalPages — @Model.TotalItems reporte(s)
                    </div>
                </nav>
            </div>
        }
    </div>
</div>