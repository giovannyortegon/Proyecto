@page "{id:int}"
@model AuditSentinel.Pages.Reportes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Reporte";
}

<div class="p-5">
<h2>Eliminar Reporte</h2>

<div class="card p-3">
    <p class="mb-2">
        ¿Seguro que deseas eliminar el reporte
        <strong>@Model.Reporte.NombreReporte</strong>?
    </p>

    <dl class="row">
        <dt class="col-sm-3">Cumplimiento</dt>
        <dd class="col-sm-9">@Model.Reporte.cumplimiento</dd>

        <dt class="col-sm-3">Fecha de creación</dt>
        <dd class="col-sm-9">@Model.Reporte.Creado.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Escaneos asociados</dt>
        <dd class="col-sm-9">@((Model.Reporte.EscaneosReportes?.Count) ?? 0)</dd>
    </dl>

    <form method="post" class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>

    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
</div>
</div>