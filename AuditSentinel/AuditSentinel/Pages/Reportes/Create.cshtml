
@page
@model AuditSentinel.Pages.Reportes.CreateModel
@{
    ViewData["Title"] = "Nuevo Reporte";
}

<div class="p-5">
<h2>Nuevo Reporte</h2>

<form method="post">
    <div class="card p-3">
        <div class="mb-3">
            <label asp-for="Reporte.NombreReporte" class="form-label"></label>
            <input asp-for="Reporte.NombreReporte" class="form-control" />
            <span asp-validation-for="Reporte.NombreReporte" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reporte.cumplimiento" class="form-label"></label>
            <select asp-for="Reporte.cumplimiento" class="form-select"
                    asp-items="Html.GetEnumSelectList<AuditSentinel.Models.Cumplimiento>()"></select>
            <span asp-validation-for="Reporte.cumplimiento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reporte.Creado" class="form-label"></label>
            <input asp-for="Reporte.Creado" type="datetime-local"
                   class="form-control"
                   value="@Model.Reporte.Creado.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Reporte.Creado" class="text-danger"></span>
        </div>

        <hr />
        <h5>Lista Escaneos</h5>
        <div class="mb-3">
            <label class="form-label">Escaneos</label>
            <select multiple class="form-select"
                    asp-for="SelectedEscaneos"
                    asp-items="Model.EscaneosList"></select>
            @* <small class="text-muted">Usa Ctrl/Cmd para seleccionar múltiples.</small> *@
            <span asp-validation-for="SelectedEscaneos" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>
</div>

@section Scripts {
       <partial name="_ValidationScriptsPartial" />
}