@page
@model AuditSentinel.Pages.Reportes.CreateModel

        @{
        ViewData["Title"] = "Crear";
        }
        
        <h1>Crear</h1>
        
    <h4>Reportes</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reportes.NombreReporte" class="control-label"></label>
                <input asp-for="Reportes.NombreReporte" class="form-control" />
                <span asp-validation-for="Reportes.NombreReporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reportes.cumplimiento" class="control-label"></label>
                <select asp-for="Reportes.cumplimiento" class="form-control"></select>
                <span asp-validation-for="Reportes.cumplimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reportes.Creado" class="control-label"></label>
                <input asp-for="Reportes.Creado" class="form-control" />
                <span asp-validation-for="Reportes.Creado" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-page="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
