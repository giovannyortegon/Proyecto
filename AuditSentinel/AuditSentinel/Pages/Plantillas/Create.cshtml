
@page
@model AuditSentinel.Pages.Plantillas.CreateModel
@{
    ViewData["Title"] = "Nueva Plantilla";
}
<div class="p-5">
<h2>Nueva Plantilla</h2>

<form method="post">
    <div class="card p-3">
        <div class="mb-3">
            <label asp-for="Plantilla.NombrePlantilla" class="form-label"></label>
            <input asp-for="Plantilla.NombrePlantilla" class="form-control" />
            <span asp-validation-for="Plantilla.NombrePlantilla" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Plantilla.Version" class="form-label"></label>
            <input asp-for="Plantilla.Version" class="form-control" />
            <span asp-validation-for="Plantilla.Version" class="text-danger"></span>
        </div>

        <hr />
        <h5>Relacionar Vulnerabilidades</h5>
        <div class="mb-3">
            <label class="form-label">Vulnerabilidades</label>
            <select multiple class="form-select"
                    asp-for="SelectedVulnerabilidades"
                    asp-items="Model.VulnerabilidadesList"></select>
            <small class="text-muted">Usa Ctrl/Cmd para seleccionar múltiples.</small>
            <span asp-validation-for="SelectedVulnerabilidades" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}