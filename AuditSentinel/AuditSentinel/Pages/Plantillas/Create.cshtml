@page
@model AuditSentinel.Pages.Plantillas.CreateModel
@{
    ViewData["Title"] = "Nueva Plantilla de Auditoría";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-page="Index">Plantillas</a></li>
                    <li class="breadcrumb-item active">Nuevo Perfil</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800 fw-bold">
                <i class="bi bi-file-earmark-medical text-primary"></i> Crear Plantilla de Escaneo
            </h1>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <form method="post">
        <div class="row g-4">
            <div class="col-lg-5">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Información del Perfil</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Plantilla.NombrePlantilla" class="form-label small fw-bold text-muted text-uppercase">Nombre de la Plantilla</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-bookmark-plus"></i></span>
                                <input asp-for="Plantilla.NombrePlantilla" class="form-control" placeholder="Ej: Cumplimiento PCI-DSS" />
                            </div>
                            <span asp-validation-for="Plantilla.NombrePlantilla" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Plantilla.Version" class="form-label small fw-bold text-muted text-uppercase">Versión / Revisión</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-git"></i></span>
                                <input asp-for="Plantilla.Version" class="form-control" placeholder="Ej: 1.0.4" />
                            </div>
                            <span asp-validation-for="Plantilla.Version" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Vulnerabilidades a Detectar</h6>
                        <span class="badge bg-primary rounded-pill">Selección Múltiple</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted text-uppercase">Catálogo de Vulnerabilidades</label>
                            <select multiple class="form-select select-vulnerability-custom"
                                    asp-for="SelectedVulnerabilidades"
                                    asp-items="Model.VulnerabilidadesList">
                            </select>
                            <div class="form-text mt-3 bg-light p-2 rounded small border-start border-primary border-4">
                                <i class="bi bi-info-circle-fill me-1 text-primary"></i>
                                Seleccione las vulnerabilidades que esta plantilla debe identificar durante el escaneo. Use <strong>Ctrl + Clic</strong> para selección múltiple.
                            </div>
                            <span asp-validation-for="SelectedVulnerabilidades" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mt-4">
            <div class="card-body d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm fw-bold">
                    <i class="bi bi-cloud-arrow-up me-2"></i> Guardar Plantilla
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    /* Estilo para el selector múltiple de vulnerabilidades */
    .select-vulnerability-custom {
        height: 250px !important;
        border-radius: 10px;
        border: 1px solid #dee2e6;
        padding: 10px;
        background-color: #fcfcfc;
    }

        .select-vulnerability-custom option {
            padding: 12px 15px;
            margin-bottom: 5px;
            border-radius: 6px;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

            .select-vulnerability-custom option:hover {
                background-color: #f1f4f9;
                border-left: 3px solid #4e73df;
            }

            .select-vulnerability-custom option:checked {
                background: linear-gradient(135deg, #4e73df 0%, #224abe 100%) !important;
                color: white;
                border-left: 3px solid #2e59d9;
            }

    .form-control:focus, .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}