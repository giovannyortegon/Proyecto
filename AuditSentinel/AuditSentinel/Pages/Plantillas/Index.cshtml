@page
@using AuditSentinel.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model AuditSentinel.Pages.Plantillas.IndexModel
@{
    ViewData["Title"] = "Gestión de Plantillas";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-file-earmark-medical-fill text-primary"></i> Catálogo de Plantillas
        </h1>
        <div class="d-flex gap-2">
            <a asp-page="/Configuracion" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <a class="btn btn-primary shadow-sm px-4" asp-page="Create">
                <i class="bi bi-plus-lg me-1"></i> Nueva Plantilla
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros de Perfiles</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label small fw-bold text-muted">Nombre del Perfil</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input name="search" value="@Model.Search" class="form-control bg-light border-start-0 ps-0" placeholder="Ej: Escaneo Rápido de Red..." />
                    </div>
                </div>
                <div class="col-md-4 d-flex gap-2">
                    <button class="btn btn-outline-primary flex-grow-1" type="submit">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary" title="Restablecer">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-dark">Plantillas de Auditoría Registradas</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-muted">
                        <tr>
                            <th class="ps-4" style="width: 40%;">Nombre del Perfil</th>
                            <th class="text-center">Versión</th>
                            <th class="text-center">Alcance (Vulnerabilidades)</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var p in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3 bg-light text-primary rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-clipboard-check fs-5"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@p.NombrePlantilla</div>
                                                <small class="text-muted">ID: #@p.IdPlantilla</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                                            v.@p.Version
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-circle bg-primary bg-opacity-10 text-primary border border-primary-subtle p-2" style="width: 35px; height: 35px; display: inline-flex; align-items: center; justify-content: center;">
                                            @(p.PlantillasVulnerabilidades?.Count ?? 0)
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a asp-page="Details" asp-route-id="@p.IdPlantilla" class="btn btn-sm btn-outline-secondary" title="Ver Detalles">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@p.IdPlantilla" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@p.IdPlantilla" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted small">
                                    <i class="bi bi-file-earmark-x d-block fs-1 mb-2"></i>
                                    No se encontraron plantillas registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 py-3 text-center">
                <nav aria-label="Paginación">
                    <ul class="pagination pagination-sm justify-content-center mb-1">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-search="@Model.Search">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" asp-route-search="@Model.Search">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-search="@Model.Search">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="small text-muted">
                        Página @Model.PageNumber de @Model.TotalPages — @Model.TotalItems registro(s)
                    </div>
                </nav>
            </div>
        }
    </div>
</div>

<style>
    /* Estilo para simular un avatar o icono de fila */
    .avatar-sm {
        flex-shrink: 0;
    }

    .table thead th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05rem;
        font-weight: 700;
    }

    .bg-secondary-subtle {
        background-color: #f3f4f6 !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.02);
    }
</style>