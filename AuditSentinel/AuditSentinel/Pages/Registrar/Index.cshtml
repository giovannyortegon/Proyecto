    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-dark">Directorio de Cuentas</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Identidad</th>
                            <th>Nombre de Usuario</th>
                            <th>Correo Electrónico</th>
                            <th>Roles / Privilegios</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            foreach (var u in Model.Users)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3 bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 38px; height: 38px;">
                                                @u.Nombre.Substring(0, 1)
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@u.Nombre @u.Apellido</div>
                                                <small class="text-muted">ID: @u.Id.ToString().Substring(0, 8)...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-primary border border-primary-subtle">
                                            @@@u.UserName
                                        </span>
                                    </td>
                                    <td class="text-muted">@u.Email</td>
                                    <td>
                                        @foreach (var rol in u.Rol)
                                        {
                                            <span class="badge @(rol == "Administrador" ? "bg-danger" : "bg-info text-dark") rounded-pill px-2">
                                                @rol
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@u.Id" title="Ver Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-primary" asp-page="Editar" asp-route-id="@u.Id" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger" asp-page="Eliminar" asp-route-id="@u.Id" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-2 d-block mb-2"></i>
                                    No se encontraron usuarios registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <small class="text-muted italic">Total: <strong>@Model.Users.Count()</strong> usuarios activos en el sistema.</small>
        </div>
    </div>
</div>

