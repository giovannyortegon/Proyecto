@page "{id}"
@using AuditSentinel.Models
@model AuditSentinel.Pages.Usuarios.DetailsModel
@{
    ViewData["Title"] = "Perfil de Usuario";
    var registro = Model.Registro;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 text-white p-3 rounded-3 shadow-sm"
         style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-page="./Index" class="text-white-50">Usuarios</a></li>
                    <li class="breadcrumb-item active text-white" aria-current="page">Detalles</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 fw-bold">
                <i class="bi bi-person-badge me-2"></i> Perfil de Usuario
            </h1>
        </div>
        <div class="text-end">
            <span class="badge bg-white text-primary rounded-pill px-3 shadow-sm">ID: @registro.Id</span>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center py-5">
                    <div class="mb-4 mx-auto bg-light rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                         style="width: 120px; height: 120px;">
                        <span class="h1 mb-0 text-primary fw-bold">@registro.Nombre.Substring(0, 1)@registro.Apellido.Substring(0, 1)</span>
                    </div>
                    <h4 class="fw-bold mb-1">@registro.Nombre @registro.Apellido</h4>
                    <p class="text-muted mb-3">@@@registro.UserName</p>

                    <div class="d-flex justify-content-center gap-2 mb-4">
                        @if (registro.Rol != null && registro.Rol.Any())
                        {
                            @foreach (var r in registro.Rol)
                            {
                                <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">
                                    <i class="bi bi-shield-check me-1"></i> @r
                                </span>
                            }
                        }
                    </div>

                    <div class="small text-muted border-top pt-3">
                        <i class="bi bi-calendar-check me-1"></i> Miembro desde: <br>
                        <strong>@registro.FechaCreado</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8 col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 font-weight-bold text-dark">
                        <i class="bi bi-card-text me-2"></i> Información Detallada
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <tbody>
                                <tr>
                                    <th class="ps-4 text-muted small fw-bold text-uppercase" style="width: 30%;">Nombre Completo</th>
                                    <td class="text-dark fw-medium">@registro.Nombre @registro.Apellido</td>
                                </tr>
                                <tr>
                                    <th class="ps-4 text-muted small fw-bold text-uppercase">Nombre de Usuario</th>
                                    <td><code class="text-primary fw-bold">@registro.UserName</code></td>
                                </tr>
                                <tr>
                                    <th class="ps-4 text-muted small fw-bold text-uppercase">Correo Electrónico</th>
                                    <td>
                                        <a href="mailto:@registro.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i> @registro.Email
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="ps-4 text-muted small fw-bold text-uppercase">Estado de Cuenta</th>
                                    <td>
                                        <span class="badge bg-success-subtle text-success border border-success-subtle px-3 rounded-pill">
                                            Activo
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="ps-4 text-muted small fw-bold text-uppercase">Privilegios</th>
                                    <td>
                                        @if (registro.Rol != null)
                                        {
                                            <span class="text-dark">Acceso a @registro.Rol.Count módulo(s)</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Sin permisos asignados</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3 d-flex justify-content-end gap-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                    <a asp-page="./Editar" asp-route-id="@registro.Id" class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-pencil-square"></i> Editar Usuario
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Efecto hover suave para las filas de la tabla de detalles */
    .table tr:hover {
        background-color: #fcfcfc;
    }

    .bg-primary-subtle {
        background-color: #e0e7ff !important;
    }

    .bg-success-subtle {
        background-color: #dcfce7 !important;
    }
</style>