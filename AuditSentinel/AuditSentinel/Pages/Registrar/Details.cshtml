@page "{id}"
@model AuditSentinel.Pages.Usuarios.DetailsModel
@{
    ViewData["Title"] = "Detalles del usuario";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-3">
        <h2 class="mb-0">Detalles del usuario</h2>
        <span class="badge bg-secondary ms-3">ID: @Model.UserId</span>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Usuario</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Roles</dt>
                <dd class="col-sm-9">
                    @if (Model.Roles != null && Model.Roles.Length > 0)
                    {
                        <ul class="list-inline mb-0">
                            @foreach (var r in Model.Roles)
                            {
                                <li class="list-inline-item">
                                    <span class="badge bg-info text-dark">@r</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Sin roles asignados</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <a asp-page="./Editar" asp-route-id="@Model.UserId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</<div>
