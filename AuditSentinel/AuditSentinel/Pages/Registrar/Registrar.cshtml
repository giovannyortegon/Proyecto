@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@model AuditSentinel.Pages.Registrar.RegistrarModel
@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-page="/Usuarios/Index">Usuarios</a></li>
                    <li class="breadcrumb-item active">Nuevo Registro</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800 fw-bold">
                <i class="bi bi-person-plus text-primary"></i> Registrar Nuevo Usuario
            </h1>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Formulario de Inscripción</h6>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger small mb-4"></div>

                        <div class="row g-4">
                            <div class="col-md-6 border-end pe-md-4">
                                <h5 class="h6 fw-bold text-dark mb-3">
                                    <i class="bi bi-person-lines-fill me-2"></i>Información Personal
                                </h5>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold text-muted">Nombre</label>
                                    <input asp-for="Registro.Nombre" class="form-control" placeholder="Ej: Carlos" />
                                    <span asp-validation-for="Registro.Nombre" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold text-muted">Apellido</label>
                                    <input asp-for="Registro.Apellido" class="form-control" placeholder="Ej: Rodriguez" />
                                    <span asp-validation-for="Registro.Apellido" class="text-danger small"></span>
                                </div>
                                <div class="mb-0">
                                    <label class="form-label small fw-bold text-muted">Correo Electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="Registro.Email" class="form-control" placeholder="correo@empresa.com" />
                                    </div>
                                    <span asp-validation-for="Registro.Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 ps-md-4">
                                <h5 class="h6 fw-bold text-dark mb-3">
                                    <i class="bi bi-shield-lock me-2"></i>Seguridad y Acceso
                                </h5>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold text-muted">Rol de Usuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                                        <select asp-for="Registro.Rol" class="form-select border-start-0">
                                            <option value="Administrador">Administrador</option>
                                            <option value="Analista">Analista</option>
                                            <option value="Auditor">Auditor</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold text-muted">Contraseña</label>
                                    <input asp-for="Registro.Password" class="form-control" type="password" placeholder="Mínimo 8 caracteres" />
                                    <span asp-validation-for="Registro.Password" class="text-danger small"></span>
                                </div>
                                <div class="mb-0">
                                    <label class="form-label small fw-bold text-muted">Confirmar Contraseña</label>
                                    <input asp-for="Registro.ConfirmacionPassword" class="form-control" type="password" placeholder="Repita la contraseña" />
                                    <span asp-validation-for="Registro.ConfirmacionPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 text-light">

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                                {
                                    <div class="text-success small fw-bold animate__animated animate__fadeIn">
                                        <i class="bi bi-check-circle-fill me-1"></i> @Model.SuccessMessage
                                    </div>
                                }
                            </div>
                            <button class="btn btn-success btn-lg px-5 shadow-sm fw-bold" type="submit">
                                <i class="bi bi-person-check me-2"></i> Crear Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted italic">
                    <i class="bi bi-info-circle me-1"></i> Al crear el usuario, se le notificará para que pueda iniciar sesión con sus credenciales.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos para que los inputs se vean más limpios */
    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.6rem 1rem;
        background-color: #fcfcfc;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
            border-color: #198754;
            box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1);
        }

    .input-group-text {
        border-radius: 8px 0 0 8px;
        color: #6c757d;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}