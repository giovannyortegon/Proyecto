<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuditSentinel</title>
    <script type="importmap"></script>

    <!-- Si ya usas bootstrap local, puedes mantenerlo. Si quieres CDN: -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Sidebar CSS -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/AuditSentinel.styles.css" asp-append-version="true" />
</head>

<body>
    @* Sidebar y contenido principal en dos columnas flex *@
    <div class="d-flex">
        @* Incluir partial del sidebar *@
        @await Html.PartialAsync("_Sidebar")

        @* Contenido principal (página) *@
        <div class="flex-grow-1 p-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AuditSentinel - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script local (o añadirlo en site.js) -->
    <script>
        (function () {
            const toggleBtn = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('app-sidebar');
            if (!toggleBtn || !sidebar) return;

            toggleBtn.addEventListener('click', function () {
                if (sidebar.classList.contains('collapsed')) {
                    sidebar.classList.remove('collapsed');
                    sidebar.classList.add('expanded');
                } else {
                    sidebar.classList.remove('expanded');
                    sidebar.classList.add('collapsed');
                }
            });
        })();
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
